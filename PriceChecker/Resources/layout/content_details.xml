
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo_image"
            android:src="@drawable/small_logo2"
            android:layout_width="300sp"
            android:layout_height="70sp"
            android:layout_marginTop="20sp" 
            android:layout_marginLeft="20sp"/>
        <android.support.v7.widget.ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:gravity="center_horizontal"
            android:background="@android:color/white"
            android:id="@+id/actionMenuView1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout2">
                    <TextView
                        android:id="@+id/articulo_nombre"
                        android:layout_width="550sp"
                        android:layout_height="110sp"
                        android:textSize="42sp"
                        android:layout_marginLeft="50sp"
                        android:gravity="center_horizontal"
                        android:textColor="#6b6b6b"
                        android:text="@string/nombre_articulo" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout3">
                        <TextView
                            android:id="@+id/articulo_precio"
                            android:layout_width="fill_parent"
                            android:layout_height="105sp"
                            android:textSize="80sp"
                            android:gravity="center_horizontal"
                            android:textColor="#5e5e5e"
                            android:text="@string/precio_articulo"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp"
                        android:id="@+id/linearLayout4">
                        <TextView
                            android:id="@+id/articulo_codigo"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:textSize="23sp"
                            android:gravity="center"
                            android:textColor="#858585"
                            android:text="SKU: @string/codigo_articulo" />
                    </LinearLayout>
                </LinearLayout>
                    <TextView
                        android:id="@+id/idle_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Consulte el precio aquí"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="40sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textColor="#5e5e5e"/>
                    <ImageView
                        android:id="@+id/arrow_down_image"
                        android:src="@drawable/round_keyboard_arrow_down_black_36dp"
                        android:layout_width="600sp"
                        android:layout_height="70sp"
                        android:tint="#5e5e5e"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"/>
            </LinearLayout>
        </android.support.v7.widget.ActionMenuView>
    </LinearLayout>
</RelativeLayout>